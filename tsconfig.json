{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "WebWorker", "dom.iterable"],
    "types": [
      "vitest/globals",
      "vite/client",
      "vite-plugin-svg-icons/client",
      "vite-plugin-pwa/client"
    ]
  },
  "include": [
    "app/frontend/**/*",
    "./vite.config.*",
    "./vitest.setup.ts",
    "./histoire.config.*"
  ],
  "exclude": [
    "app/frontend/cypress/**/*",
    "**/*.cy.ts",
    "**/.cypress/**/*",
    "node_modules",
    "public",
    "vendor"
  ]
}
